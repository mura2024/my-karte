<div class='exam-form'>
  <h3>新規診療記録</h3>

    <%= form_with model: [@medical, @exam], local: true do |f| %>

    <%= render "devise/shared/error_messages", model: f.object %>

    <div class='exam-form__field'>
      <div class='exam-form__field--left'>
        <%= f.label :hospital, :病院名, class: 'exam-form__label', placeholder: '診療科名を入力してください' %>
      </div>
      <div class='exam-form__field--right'>
        <%= f.text_field :hospital, class: 'chat-room-form__input' %>
      </div>

      <div class='exam-form__field--left'>
        <%= f.label :exam_date, :診察日, class: 'exam-form__label', placeholder: '診療科名を入力してください' %>
      </div>
      <div class='exam-form__field--right'>
        <%= f.date_field :exam_date, class: 'chat-room-form__input' %> 
      </div>

      <div class='exam-form__field--left'>
        <%= f.label :title, :タイトル, class: 'exam-form__label', placeholder: '診療科名を入力してください' %>
      </div>
      <div class='exam-form__field--right'>
        <%= f.text_field :title, class: 'chat-room-form__input', placeholder: 'title' %>
      </div>

      <div class='exam-form__field--left'>
        <%= f.label :comment, :コメント, class: 'exam-form__label', placeholder: '診療科名を入力してください' %>
      </div>
      <div class='exam-form__field--right'>
        <%= f.text_area :comment, class: 'chat-room-form__input', placeholder: 'text', rows: '10' %>
      </div>

      <div class='exam-form__field--left'>
        <%= f.label :image, :画像, class: 'exam-form__label' %>
      </div>
      <div class='exam-form__field--right'>
        <%= f.file_field :image, class: 'exam-form__image' %>
      </div>

      <div class='exam-form__field--left'>
      </div>
      <div class='exam-form__field--right'>
        <%= f.submit '保存', class: 'exam-form__action-btn' %>
      </div>

    </div>
    <% end %>
</div>